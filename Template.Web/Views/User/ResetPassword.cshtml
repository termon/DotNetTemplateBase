@model ResetPasswordViewModel

<div class="card shadow p-4 mt-5 mx-auto w-50">
  
    <div class="position-absolute top-0 start-50 translate-middle rounded-circle bg-dark p-2">
        <svg class="text-white" width="28" height="28" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 15V17M6 21H18C19.1046 21 20 20.1046 20 19V13C20 11.8954 19.1046 11 18 11H6C4.89543 11 4 11.8954 4 13V19C4 20.1046 4.89543 21 6 21ZM16 11V7C16 4.79086 14.2091 3 12 3C9.79086 3 8 4.79086 8 7V11H16Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
        </svg>
    </div>
     
    <h3 class="my-3 mx-auto">Reset New Password</h3>
    
    <form asp-action="ResetPassword" method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        
        <div class="mt-3">
            <label asp-for="Email" class="form-label"><i class="bi-person-fill"></i>Email</label>
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        
        <div class="mt-3">
            <label asp-for="Token" class="form-label"><i class="bi bi-incognito"></i>Token</label>
            <input type="text" asp-for="Token" class="form-control" />
            <span asp-validation-for="Token" class="text-danger"></span>
        </div>
        
        <div class="mt-3">
            <label asp-for="Password" class="form-label"><i class="bi-shield-lock-fill"></i> Password</label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="PasswordConfirm" class="form-label">Password Confirm</label>
            <input type="password" asp-for="PasswordConfirm" class="form-control" />
            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
