@model Paged<User>

<h3 class="mb-3">User List</h3>
  
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                Id
                <vc:sort-link column="id" />
            </th>
            <th>
                Name
                <vc:sort-link column="name" />
            </th>
            <th>
                Email
                <vc:sort-link column="email" />     
            </th>
            <th>Role</th>   
            <th>Action</th>           
        </tr>
    </thead>
    <tbody>
        @foreach(var u in Model.Data) {
            <tr>
                <td>@u.Id</td>
                <td>@u.Name</td>
                <td>@u.Email</td>
                <td>@u.Role</td>  
                <td>
                    <a asp-action="Update" asp-route-id="@u.Id">
                        <i class="bi bi-pencil-fill"></i>
                    </a>                    
                </td>                
            </tr>
        }        
    </tbody>
</table>

<vc:paginator pages="Model.Pages" links="10"/>



