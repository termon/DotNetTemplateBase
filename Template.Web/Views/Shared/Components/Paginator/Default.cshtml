@model Template.Web.Views.Shared.Components.PaginatorProps

@{
    var last = Model.LastPage;
    var first = Model.FirstPage;


}
<div class="d-flex align-items-start">
    <div class="d-flex align-items-center">
        <span>Items</span>
        <select asp-for="PageSize" class="form-select mx-3" onchange="window.location.href=`@Url.Action("Index")?page=1&size=${this.value}`"> 
            <option value="10">10</option>
            <option value="20">20</option>
            <option value="50">50</option>
            <option value="100">100</option>
        </select>
    </div>

    <nav aria-label="table pagination">
        
        <ul class="pagination">
            <li class="page-item @(Model.AtFirstPage ? "disabled" : "" )">
                <a class="page-link" href="@Model.FirstPage?.url">
                    <i class="bi bi-arrow-bar-left"></i>
                </a>          
            </li>
            <li class="page-item @(Model.AtFirstPage ? "disabled" : "" )">
                <a class="page-link" href="@Model.PreviousPage?.url">
                    <i class="bi bi-arrow-left-short"></i>
                </a>
            </li>
            @foreach (var p in Model.Pages)
            {
                <li class="page-item @(p.pageNo == Model.CurrentPage ? "active" : "")">                    
                    <a class="page-link active" href="@p.url">@p.pageNo</a>
                </li>
            }
            <li class="page-item @(Model.AtLastPage ? "disabled" : "" )">
                <a class="page-link" href="@Model.NextPage?.url">
                    <i class="bi bi-arrow-right-short"></i>
                </a>
            </li>
            <li class="page-item @(Model.AtLastPage ? "disabled" : "")">
                <a class="page-link" href="@Model.LastPage?.url">               
                    <i class="bi bi-arrow-bar-right"></i>
                </a>
            </li>
        </ul>
    </nav>
    
</div>
