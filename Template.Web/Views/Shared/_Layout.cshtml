<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - xx.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/xx.Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
</head>
<body>
    <header>
       <partial name="_NavBar" />
    </header>

    <div class="container">
        
        <!-- AMC Any alert defined in controller is rendered here -->
        <partial name="_Alert" />

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; @DateTime.Now.Year - xx.Web - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    
    <!-- Alpine.js - Always loaded for consistent functionality -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    @* Alpine.js initialization - Only load if view requires it *@
    @if (IsSectionDefined("AlpineJS"))
    {
        @await RenderSectionAsync("AlpineJS", required: false)
    }
    
    @* HTMX - Only load if view requires it *@
    @if (IsSectionDefined("HTMX"))
    {
        <!-- HTMX - Load early for availability in other scripts -->
        <script src="https://unpkg.com/htmx.org@2.0.2"></script>
        @await RenderSectionAsync("HTMX", required: false)
    }
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
